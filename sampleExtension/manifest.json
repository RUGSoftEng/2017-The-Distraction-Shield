{
  "manifest_version": 2,

  "name": "The Distraction Shield",
  "description": "Divert attention from social media websites to learning a new language",
  "version": "1.2",
  //Icon's shown in chrome://extensions
  "icons": {"128": "icon.png"},
  "offline_enabled": false,

  //what pops up once we hit the options
  "options_page": "optionsPage/options.html",
  "options_ui": {
    "page": "optionsPage/options.html"
  },

  //Icon in the browser specification
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Distraction Shield Settings",
    "default_popup": "tooltipPage/tooltip.html"        // optional
  },

  "background": {
    "scripts": [
      "dependencies/jquery/jquery-1.10.2.js",
      "constants.js",
      "modules/dateutil.js",
      "modules/urlFormatter.js",
      "modules/storage.js",
      "modules/synchronizer.js",
      "modules/blockedSiteBuilder.js",
      "classes/BlockedSite.js",
      "classes/BlockedSiteList.js",
      "classes/UserSettings.js",
      "background.js",
      "init.js",
      "statistics/tracker.js",
      "statistics/interception.js",
      "statistics/exerciseTime.js",
      "auth/api.js",
      "auth/auth.js"
    ]
  },

  "content_scripts": [
    {
      "matches" : ["https://zeeguu.herokuapp.com/get-ex?*"],
      "js" : ["dependencies/jquery/jquery-1.10.2.js",
              "constants.js",
              "modules/storage.js",
              "classes/UserSettings.js",
              "intercept/inject.js"]
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "idle",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "intercept/inject.html"
  ]

}
