{
  "manifest_version": 2,

  "name": "The Distraction Shield",
  "description": "Divert attention from social media websites to learning a new language",
  "version": "0.1",
  //Icon's shown in chrome://extensions
  "icons": {"128": "icon.png"},
  "offline_enabled": false,

  //what pops up once we hit the options
  "options_page": "popup.html",
  "options_ui": {
    "chrome_style": true,
    "page": "popup.html"
  },

  //Icon in the browser specification
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Distraction Shield Settings"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-3.1.2.min.js", "content.js"]
    }
  ],

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]

}